{
  "manifest_version": 3,
  "name": "Form Filler AI",
  "version": "1.0.0",
  "description": "Auto-fill Google Forms and Microsoft Forms using AI (Gemini 2.5 Flash)",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://docs.google.com/forms/*",
    "https://forms.office.com/*",
    "https://forms.microsoft.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/forms/*"],
      "js": ["content-scripts/google-forms.js"],
      "css": ["styles/highlight.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://forms.office.com/*",
        "https://forms.microsoft.com/*"
      ],
      "js": ["content-scripts/microsoft-forms.js"],
      "css": ["styles/highlight.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["lib/gemini.js"],
      "matches": [
        "https://docs.google.com/*",
        "https://forms.office.com/*",
        "https://forms.microsoft.com/*"
      ]
    }
  ]
}
